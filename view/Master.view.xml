<core:View xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:table="sap.ui.table"
	controllerName="test1.view.Master">
    <u:Shell
      id="myShell">
      <u:headItems>
        <u:ShellHeadItem
          tooltip="Configuration"
          icon="sap-icon://menu2"
          press="handlePressOpenMenu" />
        <u:ShellHeadItem
          tooltip="Home"
          icon="sap-icon://home"
          visible="false"
          press="handlePressHome" />
      </u:headItems>
      <u:headEndItems>
        <u:ShellHeadItem
          icon="sap-icon://log"
          tooltip="Logoff"
          press="handleLogoffPress" />
      </u:headEndItems>
      <u:user>
        <u:ShellHeadUserItem
          image="sap-icon://person-placeholder"
          username="Harini Gunabalan"
          press="handleUserItemPressed" />
      </u:user>
      <u:search>
        <SearchField
          search="handleSearchPressed"/>
      </u:search>
      <u:paneContent>
        <Text text="Lorem ipsum" />
      </u:paneContent>
      
    	<Page
    	title="SAP ON TIME"
        showHeader="true"
        enableScrolling="false" >
        <content>
        
        <!--<Button id="openMenu" icon="sap-icon://menu2" press="handlePressOpenMenu" />-->
        
        <TileContainer
          id="container"
          tileDelete="handleTileDelete"
          >
          <StandardTile
            icon="sap-icon://notification-2"
            type="{type}"
            number="{number}"
            numberUnit="{numberUnit}"
            title="Notify"
            info="{info}"
            infoState="{infoState}" 
            press="handleMenuItemNotifyPress"/>
            
            <StandardTile
            icon="sap-icon://appointment"
            type="{type}"
            number="{number}"
            numberUnit="{numberUnit}"
            title="Schedule Meeting"
            info="{info}"
            infoState="{infoState}" 
            press="handleMenuItemSchedule"/>
              
            <StandardTile
            icon="sap-icon://appointment-2"
            type="{type}"
            number="{number}"
            numberUnit="{numberUnit}"
            title="Reschedule Meeting"
            info="{info}"
            infoState="{infoState}" 
            press="handleMenuItemSchedule"/>
            
            <StandardTile
            icon="sap-icon://sys-cancel-2"
            type="{type}"
            number="{number}"
            numberUnit="{numberUnit}"
            title="Cancel Meeting"
            info="{info}"
            infoState="{infoState}" 
            press="handleMenuItemSchedule" />
        
            
        </TileContainer>
        </content>
                 <footer>
                  <Toolbar>
                    <ToolbarSpacer/>
                      <Label text="SAP InnoJam, Aug 2015," />
                      <Label text=" Â© Team7"/>
                    <ToolbarSpacer/>
                  </Toolbar>
                </footer>
      </Page>
    </u:Shell>
</core:View>