<core:View xmlns:core="sap.ui.core" 
                xmlns:mvc="sap.ui.core.mvc" 
                xmlns="sap.m" controllerName="test1.view.ChooseAttendees"
                xmlns:l="sap.ui.layout"
                xmlns:html="http://www.w3.org/1999/xhtml">
                <Page title="Choose Attendees" showNavButton="true" navButtonPress="onNavBack" >
                    <Button id="openMenu" icon="sap-icon://menu2" press="handlePressOpenMenu" />
                    
                    <l:VerticalLayout
            class="sapUiContentPadding"
            width="100%">
         <l:content>
                                    
           <Label text="Send to a DL list:" />
                <Input
                    id="dlInput"
                    type="Text"
                    placeholder="Choose ..."
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest="handleValueHelp"
                    
                    class="sapUiSmallMarginBottom"
                    press="handleSelectDialogPress" >
                    <customData>
                        <core:CustomData
                           key="multi"
                            value="true" />
                    </customData>
                    <suggestionItems>
                        <core:Item text="Tester" />
                    </suggestionItems>
                </Input>
                
                <Label text="Send to a team:" />
                <Input
                    id="teamInput"
                    type="Text"
                    placeholder="Choose ..."
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest="handleValueHelp"
                    suggestionItems="{/ProductCollection}"
                    class="sapUiSmallMarginBottom"
                    press="handleSuggest" >
                    <customData>
                        <core:CustomData
                            key="multi"
                            value="true" />
                    </customData>
                    <suggestionItems>
                        <core:Item text="{Name}" />
                    </suggestionItems>
                </Input>
                
                <Label text="Send to a personalised list:" />
                <Input
                    id="personalInput"
                    type="Text"
                    placeholder="Choose ..."
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest="handleValueHelp"
                 
                    class="sapUiSmallMarginBottom"
                    press="handleSelectDialogPress" >
                    <customData>
                        <core:CustomData
                            key="multi"
                            value="true" />
                    </customData>
                    <suggestionItems>
                        <core:Item text="{Name}" />
                    </suggestionItems>
                </Input>
                
                <Label text="Search employees:" />
                <Input
                    id="searchInput"
                    type="Text"
                    placeholder="Choose ..."
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest="handleValueHelp"
                    suggestionItems="{/ProductCollection}"
                    class="sapUiSmallMarginBottom"
                    press="handleSelectDialogPress" >
                    <customData>
                        <core:CustomData
                            key="multi"
                            value="true" />
                    </customData>
                    <suggestionItems>
                        <core:Item text="{Name}" />
                    </suggestionItems>
                </Input>

                                </l:content>
                                </l:VerticalLayout>
    
     <footer>
              <Toolbar>
                <ToolbarSpacer/>
                  <Label text="SAP InnoJam, Aug 2015," />
                  <Label text=" Â© Team7"/>
                <ToolbarSpacer/>
              </Toolbar>
            </footer>            
                
                
                </Page>
</core:View>
